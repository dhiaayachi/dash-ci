{
  "compileOnSave": true,
  "compilerOptions": {

    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "pretty": true,
    "listFiles":  true,

    "module": "none",
    "moduleResolution": "node",
    "outFile": "./app.js",
    "sourceMap": true,
    "target": "es5",
    "sourceRoot": "./app",
    "typeRoots": [
      "./node_modules/@types",
      "./@dev-types"
    ]
  }
}
